/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.in-out-come {
  width: 70%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 48rpx;
}

.income {
  flex: 1;
}

.outcome {
  flex: 1;
}

.latest-records {
  width: 70%;
  min-height: 200rpx;
  border-radius: 20rpx;
  margin: 48rpx;
}

.buttons-container {
  width: 80%;
  display: flex;
  flex-direction: row;
  margin: 48rpx;
}

.add-btn {
  flex: 3;
}

.revert-btn {
  flex: 1;
}
